.sbox-mask {
  position: fixed;
  width: 100vw;
  height: 100vh;
  left: 0;
  top: 0;
  background: rgba(0, 0, 0, 0.2);
}

.sbox-container {
  transition: 0.3s;
  position: absolute;
  width: 100%;
  left: 0;
  background: white;
  border-radius: 12px 12px 0 0;
  overflow: hidden;
  filter: opacity(0.0);
}

.sbox-container.show {
  bottom: 0;
  filter: opacity(1.0);
}

.sbox-container--main {
  /* padding: 20px calc(16px + env(safe-area-inset-right)) 12px calc(16px + env(safe-area-inset-left));
  height: 100%; */
}

.sbox-header {
  position: relative;
  text-align: center;
  /* margin-bottom: 15px; */
  border-bottom: 1px solid #f8f8f8;
}

.sbox-header__title {
  font-size: 12px;
  line-height: 53px;
  vertical-align: middle;
  color: #888;
}

.sbox-item {
  height: 53px;
  line-height: 53px;
  width: 100%;
  text-align: center;
  vertical-align: middle;
  border-top: 1px solid #f8f8f8;
  color: #333;
  padding: 0 20px;
}

.sbox-item:first-child {
  border-top: none;
}

.sbox-item-cancel-gap {
  height: 6px;
  width: 100%;
  background-color: #f8f8f8;
}

.sbox-item__value {
  overflow-x: scroll;
  white-space: nowrap;
  width: 100%;
}

button.sbox-item__value {
  color: #333;
  background: none;
  display: flex;
  justify-content: center;
  align-items: center;
  font-weight: normal;
  width: 100%;
  height: 100%;
  margin: 0;
  font-size: 16px;
}

.sbox-item__value.warn {
  color: #d66;
}