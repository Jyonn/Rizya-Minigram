.member-container {
  width: 100%;
  height: 100%;
  position: relative;
  display: flex;
  flex-direction: row;
  align-items: center;
}

.member-container__avatar {
  width: 30px;
  height: 30px;
  border-radius: 15px;
  margin-right: 10px;
  position: relative;
  overflow: hidden;
}

.member-container__name {
  font-size: 16px;
  color: #555;
}