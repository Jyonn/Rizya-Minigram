.space-item {
  margin-bottom: 30px;
  width: 100%;
  height: 100%;
  position: relative;
  padding-left: 20px;
}

.space-item-main {
  position: relative;
  border-radius: 10px;
  width: 100%;
  height: 100%;
  overflow: hidden;
}

.space-item--mask {
  background-color: rgba(0, 0, 0, 0.2);
  border-radius: 10px;
}

.space-item--info-line {
  position: absolute;
  top: 12px;
  left: 16px;
}

.space-item--info-line__avatar {
  width: 34px;
  height: 34px;
  border-radius: 17px;
  border: 2px solid #eee;
  float: left;
  margin-left: -12px;
  position: relative;
  overflow: hidden;
}

.space-item--info-line__avatar:first-child {
  margin-left: 0;
}

.space-item--info-line__desc {
  /* background-color: #555; */
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 18px;
  font-weight: bold;
  color: white;
  border: 0px;
  height: 34px;
  padding-left: 2px;
}

.space-item--info-line__desc text {
  font-size: 8px;
  margin: 0 2px;
}

.space-item--visit-line {
  position: absolute;
  right: 16px;
  bottom: 44px;
  float: right;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
}

.space-item--visit-line__visit {
  padding: 1px 10px;
  font-size: 14px;
  color: #6393D5;
  border-radius: 10px 0 10px 10px;
  background-color: white;
  font-family: 'Share Tech';
}

.space-item--name-line {
  position: absolute;
  right: 16px;
  bottom: 10px;
}

.space-item--name-line__name {
  color: white;
  font-weight: bold;
  font-size: 18px;
}