@import "../../templates/milestone/milestone.wxss";
@import "../../templates/member/member.wxss";

.space-title {
  position: absolute;
  top: 0;
  left: 0;
  height: 44px;
  width: 100%;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
}

.space-title__current {
  font-size: 18px;
  /* font-weight: bold; */
}

.space-title__edit {
  position: absolute;
  line-height: 44px;
  width: 30px;
  height: 44px;
  vertical-align: middle;
  left: 20px;
  color: #6393D5;
}

.section {
  position: relative;
  width: 100%;
  padding: 0 20px;
  background-color: white;
  border-radius: 5px;
  margin-bottom: 20px;
}

.section-header {
  /* height: 44px; */
  padding: 15px 0 10px;
  border-bottom: 1px solid rgba(0, 0, 0, 0.05);
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
}

.section-header__title {
  color: #6393D5;
  font-size: 18px;
  font-family: 'Share Tech';
}

.section-header__icon {
  color: #6393D5;
  font-size: 16px;
}

.section-main {
  padding: 10px 0 20px;
}

.section-main.scroll-x {
  overflow-x: scroll;
  white-space: nowrap;
}

.member-swiper {
  height: 40px;
}